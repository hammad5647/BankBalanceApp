<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MissedCallActivity">

    <RelativeLayout
        android:id="@+id/missedBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:elevation="150dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:id="@+id/txtMissedcallBanking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/backBtn"
            android:fontFamily="serif"
            android:text="Missed Call Banking"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/searchBankBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/baseline_search_24"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/bankBranchList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/missedBar"
        android:divider="@null"
        />
</RelativeLayout>